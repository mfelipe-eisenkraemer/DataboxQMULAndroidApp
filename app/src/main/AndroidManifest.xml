<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.databoxqmulandroidapp">

    <!-- To access Facebook + APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Location Updates just when device is booted: -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- To access GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To use Google maps -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

    <!-- To use Google fit -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />


    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="MyApplication">

        <!-- Meta data -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="PUT YOUR FABRIC KEY HERE" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="PUT YOUR GOOGLE MAPS KEY HERE"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Activities -->
        <activity
            android:name=".ActMain"
            android:label="@string/app_name"></activity>

        <activity
            android:name=".ActLogin"
            android:label="@string/title_main_activity"
            android:windowSoftInputMode="adjustResize|stateHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Service for location updates -->
        <service
            android:name=".ServGpsLocation"
            android:exported="false" />

        <service
            android:name=".ServTrendAnalysis"
            android:exported="false" />


        <!-- Receiver for GPS changes -->
        <receiver
            android:name=".ReceiverGpsLocation"
            android:enabled="true"
            android:exported="false"
            android:label="LocationLoggerServiceManager">
            <intent-filter>
                <action android:name="android.location.PROVIDERS_CHANGED" />
            </intent-filter>
        </receiver>

        <!-- Receiver for boot completed -->
        <receiver android:name=".ReceiverBootCompleted">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>


    </application>

</manifest>
